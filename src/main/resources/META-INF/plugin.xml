<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.cnrture.quickprojectwizard</id>
    <name>QuickProjectWizard</name>
    <vendor email="cnrture@gmail.com" url="https://canerture.com">Caner Ture</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>
    <depends>com.intellij.modules.androidstudio</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.android.tools.idea.wizard.template">
        <wizardTemplateProvider implementation="com.github.cnrture.quickprojectwizard.AndroidStudioTemplateProvider"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="QPW Notification Group"
                           displayType="BALLOON"
                           key="notification.group.qpw"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                factoryClass="com.github.cnrture.quickprojectwizard.toolwindow.QuickProjectWizardToolWindowFactory"
                id="QuickProjectWizard DevTools"
                anchor="right"
                icon="/icons/pluginIcon.svg"/>
    </extensions>

    <actions>
        <action id="QuickProjectWizard.NewFeature"
                class="com.github.cnrture.quickprojectwizard.toolwindow.action.CreateFeatureAction"
                text="Add Feature"
                description="Create a new feature"
                icon="/icons/pluginIcon.svg">
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewDir"/>
            <keyboard-shortcut keymap="$default" first-keystroke="control shift Q"/>
        </action>
    </actions>
</idea-plugin>
